@model List<CommentViewModel>

@if (Model.Any())
{
    @if (Model.First().Depth > 0)
    {
        <ul class="dapi-100_comments-list dapi-100_reply-list-depth-@Model.First().Depth">
            @foreach (var comment in Model)
            {
                await Html.RenderPartialAsync("_Comment", comment);
            }
        </ul>
    }
    else
    {
        @foreach (var comment in Model)
        {
            await Html.RenderPartialAsync("_Comment", comment);
        }
    }
}
